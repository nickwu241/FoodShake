<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:divider="@android:drawable/bottom_bar">

    <EditTextPreference
        android:defaultValue="10000"
        android:inputType="number"
        android:key="radius"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary=""
        android:title="Radius" />
    <MultiSelectListPreference
        android:defaultValue="@array/price_values"
        android:entries="@array/price"
        android:entryValues="@array/price_values"
        android:key="price"
        android:summary=""
        android:title="Price" />
    <MultiSelectListPreference
        android:defaultValue="@array/category_defaults"
        android:entries="@array/category"
        android:entryValues="@array/category_values"
        android:key="cuisine_type"
        android:summary=""
        android:title="Cuisine Type" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="open_now"
        android:title="Open Now" />
</PreferenceScreen>